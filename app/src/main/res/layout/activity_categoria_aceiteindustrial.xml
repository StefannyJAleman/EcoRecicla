<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F3DD"
    tools:context="com.example.reto2.categoria_aceiteindustrial">


  <TextView
      android:id="@+id/textesta"
      android:layout_width="394dp"
      android:layout_height="77dp"
      android:background="#BBE39A"
      android:fontFamily="@font/merriweather_sans_bold"
      android:paddingTop="25dp"
      android:text="Reco Aceite Industrial"
      android:textAlignment="center"
      android:textColor="#265144"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <ImageView
      android:id="@+id/Retroceder"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginTop="18dp"
      app:layout_constraintBottom_toBottomOf="@+id/textesta"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.12"
      app:layout_constraintStart_toStartOf="@+id/textesta"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      app:srcCompat="@drawable/baseline_keyboard_arrow_left_24" />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="600dp"
      android:layout_marginTop="40dp"
      app:layout_constraintTop_toBottomOf="@+id/textesta"
      tools:layout_editor_absoluteX="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


      <androidx.cardview.widget.CardView
          android:id="@+id/porquere_ai"
          android:layout_width="325.7dp"
          android:layout_height="172.43dp"
          android:layout_marginStart="34dp"
          android:layout_marginTop="30dp"
          app:cardCornerRadius="10dp"
          app:cardElevation="10dp"
          tools:ignore="TextSizeCheck">

        <LinearLayout
            android:layout_width="326dp"
            android:layout_height="match_parent"
            android:background="@drawable/qwe"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

          <ImageView

              android:id="@+id/imgAIa"
              android:layout_width="match_parent"
              android:layout_height="120dp" />

          <TextView

              android:id="@+id/textViewAI"
              android:layout_width="240dp"
              android:layout_height="48dp"
              android:layout_marginStart="25dp"
              android:layout_marginTop="5dp"
              android:fontFamily="@font/inter_bold"
              android:text="¿Por qué se debe reciclar el aceite industrial?"
              android:textColor="#FDFDFD"
              android:textSize="16sp"
              android:textStyle="bold" />

        </LinearLayout>

      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:id="@+id/reco_consejos"
          android:layout_width="325.7dp"
          android:layout_height="172.43dp"
          android:layout_marginStart="34dp"
          android:layout_marginTop="30dp"
          app:cardCornerRadius="10dp"
          app:cardElevation="10dp"
          tools:ignore="TextSizeCheck">

        <LinearLayout
            android:layout_width="326dp"
            android:layout_height="match_parent"
            android:background="@drawable/asd"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

          <ImageView

              android:id="@+id/imgAId"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:contentDescription="" />

          <TextView

              android:id="@+id/textViewd"
              android:layout_width="260dp"
              android:layout_height="55dp"
              android:layout_marginStart="25dp"
              android:layout_marginTop="5dp"
              android:contentDescription=""
              android:fontFamily="@font/inter_bold"
              android:text="Reconsejos personalizados del aceite industrial"
              android:textColor="#FDFDFD"
              android:textSize="16sp"
              android:textStyle="bold" />

        </LinearLayout>

      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:id="@+id/proreci"
          android:layout_width="325.7dp"
          android:layout_height="172.43dp"
          android:layout_marginStart="34dp"
          android:layout_marginTop="30dp"
          app:cardCornerRadius="10dp"
          app:cardElevation="10dp"
          tools:ignore="TextSizeCheck">

        <LinearLayout
            android:layout_width="326dp"
            android:layout_height="match_parent"
            android:background="@drawable/fgh"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

          <ImageView

              android:id="@+id/imgAIb"
              android:layout_width="match_parent"
              android:layout_height="120dp" />

          <TextView

              android:id="@+id/textViewAIb"
              android:layout_width="240dp"
              android:layout_height="48dp"
              android:layout_marginStart="25dp"
              android:layout_marginTop="5dp"
              android:fontFamily="@font/inter_bold"
              android:text="¿Cómo es el proceso de reciclaje del aceite industrial ?"
              android:textColor="#FDFDFD"
              android:textSize="16sp"
              android:textStyle="bold" />

          <TextView

              android:id="@+id/textViewAIa"
              android:layout_width="240dp"
              android:layout_height="48dp"
              android:layout_marginStart="25dp"
              android:layout_marginTop="5dp"
              android:fontFamily=""
              android:text=""
              android:textColor="#FDFDFD"
              android:textSize="16sp" />
        </LinearLayout>

      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:id="@+id/usos_reci"
          android:layout_width="325.7dp"
          android:layout_height="172.43dp"
          android:layout_marginStart="34dp"
          android:layout_marginTop="30dp"
          app:cardCornerRadius="10dp"
          app:cardElevation="10dp"
          tools:ignore="TextSizeCheck">

        <LinearLayout
            android:layout_width="326dp"
            android:layout_height="match_parent"
            android:background="@drawable/zxc"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

          <ImageView

              android:id="@+id/imgAIc"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:contentDescription="" />

          <TextView

              android:id="@+id/textViewAIc"
              android:layout_width="260dp"
              android:layout_height="48dp"
              android:layout_marginStart="25dp"
              android:layout_marginTop="5dp"
              android:fontFamily="@font/inter_bold"
              android:text="¿Qué usos se puede realizar con el reciclaje de aceite industrial?"
              android:textColor="#FDFDFD"
              android:textSize="16sp"
              android:textStyle="bold" />
        </LinearLayout>

      </androidx.cardview.widget.CardView>


    </LinearLayout>

  </ScrollView>

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/barnav"
      style="@style/MyBottomNavigationView"
      android:layout_width="match_parent"
      android:layout_height="65dp"
      android:layout_alignParentBottom="true"
      android:background="@color/backg"
      app:itemIconTint="@drawable/fientecbarra"
      app:itemTextColor="@drawable/fientecbarra"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:menu="@menu/menu_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>