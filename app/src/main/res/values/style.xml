<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btnLogin">
    <item name="backgroundTint">#39932C</item>
    <item name="android:layout_width">200dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:text">Iniciar Sesión</item>
        <item name="fontFamily">@font/inter_semibold</item>
</style>
    <style name="btnRegistro">
        <item name="backgroundTint">#29A3D4</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:text">Registrarse</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="textoFormulario">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- checkbox style for colored checkbox -->

    <style name="colored_checkBox" parent="Theme.AppCompat.Light">
        <!-- selected checkbox color -->
        <item name="colorAccent">@android:color/holo_green_dark</item>
        <!-- default/unselected checkbox color -->
        <item name="android:textColorSecondary">@android:color/background_light</item>

    </style>

    <style name="botonesMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">start</item>
        <item name="android:contentDescription">SoyUnaImagenBoton</item>
    </style>

    <style name="btnPerfilUsuario">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">#39932C</item>
        <item name="android:textSize">15dp</item>

    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

    </style>

    <style name="ExposedDropdownMenuStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

    </style>

    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/inner</item>
    </style>

    <style name="btnShare">
        <item name="android:background">@drawable/formashape</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:text">Iniciar Sesión</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="EstiloTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorFondo</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>



    </style>


    <style name="EstiloTextInputLayoutValorlt" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorFondoValorkg</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>

    </style>



</resources>